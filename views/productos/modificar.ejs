<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>

<div class="container mt-5">
    <div class="card">
        <form action="/editarproducto" method="post" enctype="multipart/form-data">
            <div class="card-header">
                <h1>Modificar productos</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= prod.id%>">
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= prod.nombre%>" autofocus>
                <input class="form-control mb-3" type="text" name="descripcion" id="descripcion" placeholder="Descripcion" value="<%= prod.descripcion%>">
                <input class="form-control mb-3" type="text" name="precio" id="precio" placeholder="Precio" value="<%= prod.precio%>">
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Foto">
            </div>
            <div class="card_footer">
                <button class="form-control btn btn-primary" type="submit">Modificar producto</button>
            </div>
        </form>
    </div>
</div>

