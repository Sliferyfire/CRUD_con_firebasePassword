<div class="container mt-5">
    <div class="card">
        <form action="/nuevousuario" method="post" enctype="multipart/form-data">
            <div class="card-header">
                <h1>Nuevo usuario</h1>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario">
                <input class="form-control mb-3" type="text" name="password" id="password" placeholder="Password">
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Foto">
            </div>
            <div class="card_footer">
                <button class="form-control btn btn-primary" type="submit">Guardar usuario</button>
            </div>
        </form>
    </div>
</div>





<div class="container mt-5">
    <div class="card">
        <form action="/editar" method="post" enctype="multipart/form-data">
            <div class="card-header">
                <h1>Modificar usuario</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= user.id%>">
                <input type="hidden" name="passwordViejo" id="passwordViejo" value="<%= user.password%>">
                <input type="hidden" name="saltViejo" id="saltViejo" value="<%= user.salt%>">
                <input type="hidden" name="fotoVieja" id="fotoVieja" value="<%= user.foto%>">
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= user.nombre%>" autofocus>
                <input class="form-control mb-3" type="text" name="usuario" id="usuario" placeholder="Usuario" value="<%= user.usuario%>">
                <input class="form-control mb-3" type="text" name="password" id="password" placeholder="Escribe un nuevo password o deja en blanco para conservarlo" value="">
                <input class="form-control mb-3" type="file" name="foto" id="foto" placeholder="Foto">
            </div>
            <div class="card_footer">
                <button class="form-control btn btn-primary" type="submit">Modificar usuario</button>
            </div>
        </form>
    </div>
</div>





